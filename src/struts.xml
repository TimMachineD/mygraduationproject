<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<!-- 开发模式 -->
<constant name="struts.devMode" value="false" />

<package name="default" extends="struts-default" namespace="/">
	<!-- 配置首页访问的Action -->
	<action name="index_*" class="indexAction" method="{1}">
		<result name="toIndex">/WEB-INF/jsp/index.jsp</result>
		<result name="toSecCategory">/WEB-INF/jsp/csListTest.jsp</result>
		<result name="error">/WEB-INF/jsp/success.jsp</result>
	</action>
	<!-- 配置用户模块的Action -->
	<action name="user_*" class="userAction" method="{1}">
		<result name="registPage">/WEB-INF/jsp/regist.jsp</result>
		<result name="msg">/WEB-INF/jsp/login.jsp</result>
		<result name="loginPage">/WEB-INF/jsp/login.jsp</result>
		<result name="login">/WEB-INF/jsp/login.jsp</result>
		<result name="loginSuccess" type="redirectAction">index</result>
		<result name="quit" type="redirectAction">index</result>
		<result name="input">/WEB-INF/jsp/regist.jsp</result>
	</action>
	<!-- 一级分类的action -->
	<!-- <action name="category" class="categoryAction">
		<result name="csList">/WEB-INF/jsp/csList.jsp</result>
	</action>
	-->
</package>
</struts>
